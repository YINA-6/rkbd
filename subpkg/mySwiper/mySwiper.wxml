<view class="container">
  <!-- 顶部导航栏区域 -->
  <view class="top-mode">
    <van-nav-bar title="{{navBarTitle}}" left-text="" right-text="切换模式" left-arrow fixed safe-area-inset-top="{{false}}" bind:click-left="onClickLeft" bind:click-right="onClickRight" />
  </view>
  <view class="page-body">
    <!-- swiper滑块区域 -->
    <swiper class="swiper" duration="{{duration}}" current="{{swipercurrent}}" bindanimationfinish="animationfinish">
      <swiper-item class="swiper-item" wx:for="{{swiperList}}" wx:key="index">
        <!-- 问题区域 -->
        <view class="question">
          <van-tag type="primary" id="vtag">{{ item.type === '00'? '单选题':'多选题' }}</van-tag>
          <text user-select>{{item.question}}</text>
        </view>
        <!-- 选项区域 -->
        <block wx:for="{{item.options}}" wx:key="index" wx:for-item="optionItem">
          <view wx:if="{{(item.isAnswer !== null || globalController === true) && ico[index] === item.result}}" class="option">
            <image class="option-img" src="/static/img/正确.png" mode="widthFix" /><text style="color: #34DAA8">{{optionItem}}</text>
          </view>
          <view wx:elif="{{item.isAnswer === true && ico[index] === item.selectOption}}" class="option">
            <image class="option-img" src="/static/img/错误.png" mode="widthFix" /><text style="color: #ff0202">{{optionItem}}</text>
          </view>
          <view wx:else id="{{ico[index]}}" class="option" bindtap="onClickOption" data-item="{{item}}">
            <image class="option-img" src="{{'/static/img/'+ico[index]+'.png'}}" mode="widthFix" /><text>{{optionItem}}</text>
          </view>
        </block>
        <!-- 附图区域 -->
        <view class="photo" wx:if="{{item.photo !== ''}}">
          <image class="photo-img" src="{{'/static/img/'+item.photo+'.png'}}" mode="widthFix"></image>
        </view>
        <!-- 答案区域 -->
        <view class="answer" wx:if="{{item.isAnswer === true || globalController === true}}">
          <text style="font-weight: bold;">正确答案:{{item.result}}</text>
        </view>
        <!-- 解析区域 -->
        <view class="analysis" wx:if="{{item.analysisController === true || globalController === true}}">
          <view style="font-weight: bold;">试题解析</view>
          <text user-select="{{true}}">
            {{item.analysis}}
          </text>
        </view>
      </swiper-item>
    </swiper>
  </view>
  <!-- 底部功能区域 -->
  <view class="btm">
    <view class="collect " bindtap="onClickCollect">
      <image wx:if="{{!isCollected}}" src="/static/img/collect.png" style="width: 40rpx;" mode="widthFix"></image>
      <image wx:else src="/static/img/collect-active.png" style="width: 40rpx;" mode="widthFix"></image>
      {{isCollected?'已收藏':'收藏'}}
    </view>
    <view>√{{answerCount[0]}} ×{{answerCount[1]}}</view>
    <view>{{currentIndex+1}}/{{dataList.length}}</view>
  </view>
</view>