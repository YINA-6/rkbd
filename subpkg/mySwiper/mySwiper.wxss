.top-mode {
    width: 100%;
    height: 92rpx;
}

.page-body {
    width: 100%;
    height: 1334rpx;
    font-size: 32rpx;
}

.swiper {
    width: 100%;
    height: 100%;
}

.swiper-item {
    height: 100%;
    width: 100%;
}

.question {
    position: relative;
    margin: 10rpx 10rpx;
}

van-tag {
    position: absolute;
}

.question-text {
    text-indent: 3rem;
}

.option {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.option-img {
    width: 70rpx;
    margin: 0 10rpx;
    background-color: #fff;
    border-radius: 100%;
    box-shadow: 5rpx 5rpx 8rpx rgba(0, 0, 0, 0.1);
}

.photo {
    position: relative;
    height: 290rpx;
}

.photo-img {
    position: absolute;
    left: 188rpx;
    width: 375rpx;
}

.answer {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    margin: 64rpx 30rpx;
    background-color: #f3f6f8;
}

.analysis-title::before {
    content: ' ';
    display: block;
    left: 10rpx;
    width: 8rpx;
    height: 32rpx;
    background-color: #1989fa;
    position: absolute;
}

.analysis-title {
    margin-top: 100rpx;
    padding-left: 30rpx;
}

.analysis {}

.analysis-text {
    text-indent: 2rem;
    margin-top: 50rpx;
    padding-left: 20rpx;
}

.btm {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #f3f6f8;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}