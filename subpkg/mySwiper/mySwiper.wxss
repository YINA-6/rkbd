.top-mode {
    width: 100%;
    height: 92rpx;
}

.page-body {
    width: 100%;
    height: 1334rpx;
    font-size: 30rpx;
}

.swiper {
    width: 100%;
    height: 100%;
}

.question {
    margin: 10rpx 10rpx;
}

.option {
    display: flex;
    align-items: center;
}

.option-img {
    width: 70rpx;
    margin: 5rpx 10rpx;
}

.photo {
    position: relative;
    height: 290rpx;
}

.photo-img {
    position: absolute;
    left: 188rpx;
    width: 375rpx;
}

.answer {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60rpx;
    margin: 0 30rpx;
    background-color: #f3f6f8;
}

.analysis::before {
    content: ' ';
    display: block;
    left: 10rpx;
    width: 8rpx;
    height: 30rpx;
    background-color: #1dacf9;
    position: absolute;
}

.analysis {
    margin-top: 50rpx;
    padding-left: 20rpx;
}

.btm {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #f3f6f8;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}