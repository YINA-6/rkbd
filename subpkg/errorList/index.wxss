/* subpkg/errorList/index.wxss */

.top-mode {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    border-bottom: 2px solid #f4f7f7;
}

.top-mode view {
    flex: 1;
    align-self: center;
    text-align: center;
    font-size: 20px;
}


/* 模块区域 */

.box {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 50px;
    border-bottom: 2px solid #f4f7f7;
}

.box .left {
    flex: 3;
    align-self: center;
    font-size: 16px;
    margin-left: 20px;
    /* background-color: aqua; */
}

.box .right {
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    /* background-color: bisque; */
}